<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/bg"
    android:fitsSystemWindows="true">

    <include layout="@layout/content_main" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--                <RelativeLayout-->
        <!--                    android:layout_width="match_parent"-->
        <!--                    android:layout_height="match_parent">-->


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/last_colloge_map"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <Button
            android:id="@+id/area_pin2"
            android:layout_width="0dp"
            android:layout_height="104dp"

            android:layout_marginTop="117dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/pin1"
            android:backgroundTint="@color/sea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/area_pin1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/area_pin1"
            android:layout_width="0dp"
            android:layout_height="101dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="87dp"
            android:background="@drawable/pin1"
            android:backgroundTint="@color/primaryTextColor"
            android:drawableBottom="@drawable/pin1"
            android:drawableTint="@android:color/transparent"
            android:foregroundTint="#00FFFFFF"
            android:shadowColor="@android:color/transparent"
            app:layout_constraintEnd_toStartOf="@+id/area_pin2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!--                </RelativeLayout>-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>